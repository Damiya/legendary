OPTIONS        /*path                         controllers.Application.options(path)
# Home page
GET            /                              controllers.Application.index(any = "none")


# Redirect all unknown routes to the index page
#GET           /*any                       controllers.Application.index(any)

DELETE         /api/token/destroy             controllers.TokenController.destroy()
POST           /api/token/create              controllers.TokenController.create()

POST           /api/league/login              controllers.LeagueController.login()
GET            /api/league/landingPage        controllers.LeagueController.landingPage()
DELETE         /api/league/logout             controllers.LeagueController.logout()

GET            /*file                         controllers.Assets.at(path="/public", file)